ErrorDocument 400 http://kognition.ihostfull.com/error/400.php
ErrorDocument 401 http://kognition.ihostfull.com/error/401.php
ErrorDocument 403 http://kognition.ihostfull.com/error/403.php
ErrorDocument 404 http://kognition.ihostfull.com/error/404.php
ErrorDocument 503 http://kognition.ihostfull.com/error/503.php

# Set errors 'On' if debugging/local, Set errors 'Off' if site is live
php_value display_errors On
php_flag magic_quotes 1
php_flag magic_quotes_gpc 1
php_value mbstring.http_input auto
php_value date.timezone Europe/London

# This allows URLs to be accessed like: /index rather than /index.php
RewriteEngine on
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php
